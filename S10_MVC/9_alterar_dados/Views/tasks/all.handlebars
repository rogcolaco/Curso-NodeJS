<h1>Todas as Tarefas</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
        <div class="content">
            <a href="/" class="title">{{this.title}}</a>
            <p class="content-description">{{this.description}}</p>
        </div>
        <div class="actions">
            <a href="/"><i class="bi bi-check2"></i></a>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
            <input type="hidden" name="id" value={{this.id}}>
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>